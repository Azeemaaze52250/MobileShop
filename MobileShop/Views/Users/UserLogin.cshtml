    <div id="mp" class="col-md-3 col-md-offset-1 panel panel-primary" style="display:none; margin-top:50px;">
        <div class="panel-heading text-center">
            Please sign in
        </div>
        <div class="panel-body">
            <form class="form-signin" asp-action="UserLogin" method="post">
                <hr />
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" required autofocus />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button><label class="text-center text-danger">@ViewBag.Message</label>
                <hr />
            </form>
        </div>
    </div> <!-- /container -->

